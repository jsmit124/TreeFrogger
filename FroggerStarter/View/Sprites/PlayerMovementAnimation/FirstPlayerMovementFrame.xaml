<local:BaseSprite
    x:Class="FroggerStarter.View.Sprites.PlayerMovementAnimation.FirstPlayerMovementFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FroggerStarter.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="50"
    Width="50">

    <UserControl.Resources>
        <SolidColorBrush x:Key="FrogColor" Color="LimeGreen" />
        <SolidColorBrush x:Key="FrogSecondaryColor" Color="Yellow" />
        <SolidColorBrush x:Key="EyeColor" Color="HotPink" />
    </UserControl.Resources>

    <Canvas Width="50" Height="50" Background="Transparent">
        <Rectangle Canvas.Top="10" Canvas.Left="12" Fill="{StaticResource FrogColor}" Width="26" Height="21" />
        <Rectangle Canvas.Left="16" Fill="{StaticResource FrogColor}" Width="18" Height="6" Canvas.Top="4" />
        <Rectangle Canvas.Top="31" Canvas.Left="16" Fill="{StaticResource FrogColor}" Width="18" Height="3" />
        <Rectangle Canvas.Top="7" Canvas.Left="12" Fill="{StaticResource EyeColor}" Width="4" Height="3" />
        <Rectangle Canvas.Top="7" Canvas.Left="34" Fill="{StaticResource EyeColor}" Width="4" Height="3" />

        <Rectangle Canvas.Top="16" Canvas.Left="8" Fill="{StaticResource FrogColor}" Width="4" Height="4" />
        <Rectangle Canvas.Left="4" Fill="{StaticResource FrogColor}" Width="4" Height="20" />

        <Rectangle Canvas.Top="16" Canvas.Left="38" Fill="{StaticResource FrogColor}" Width="4" Height="4" />
        <Rectangle Canvas.Left="42" Fill="{StaticResource FrogColor}" Width="4" Height="20" />

        <Rectangle Canvas.Top="24" Canvas.Left="10" Fill="{StaticResource FrogColor}" Width="2" Height="4" />
        <Rectangle Canvas.Top="24" Canvas.Left="7" Fill="{StaticResource FrogColor}" Width="4" Height="25" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" >
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="9"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle Canvas.Top="24" Canvas.Left="38" Fill="{StaticResource FrogColor}" Width="2" Height="4" />
        <Rectangle Canvas.Top="40.333" Fill="{StaticResource FrogColor}" Width="4" Height="5" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Canvas.Left="2" >
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="9"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Canvas.Top="40.833" Fill="{StaticResource FrogColor}" Width="4" Height="5" Canvas.Left="44" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" >
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="-9"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Canvas.Top="24" Canvas.Left="39" Fill="{StaticResource FrogColor}" Width="4" Height="25" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" >
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="-9"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Fill="{StaticResource FrogColor}" Width="4" Height="4" Canvas.Left="46" Canvas.Top="4" />
        <Rectangle Fill="{StaticResource FrogColor}" Width="4" Height="4" Canvas.Top="4" />
        <Rectangle Canvas.Top="4" Canvas.Left="24" Fill="{StaticResource FrogSecondaryColor}" Width="10" Height="3" />
        <Rectangle Canvas.Top="4" Canvas.Left="16" Fill="{StaticResource FrogSecondaryColor}" Width="4" Height="3" />
        <Rectangle Canvas.Top="7" Canvas.Left="20" Fill="{StaticResource FrogSecondaryColor}" Width="8" Height="21" />
        <Rectangle Canvas.Top="12" Canvas.Left="28" Fill="{StaticResource FrogSecondaryColor}" Width="10" Height="16" />
        <Rectangle Canvas.Top="12" Canvas.Left="12" Fill="{StaticResource FrogSecondaryColor}" Width="8" Height="3" />
        <Rectangle Canvas.Top="15" Canvas.Left="12" Fill="{StaticResource FrogSecondaryColor}" Width="4" Height="13" />
        <Rectangle Canvas.Top="28" Canvas.Left="16" Fill="{StaticResource FrogSecondaryColor}" Width="4" Height="3" />
        <Rectangle Canvas.Top="31" Canvas.Left="20" Fill="{StaticResource FrogSecondaryColor}" Width="10" Height="3" />
        <Rectangle Canvas.Top="28" Canvas.Left="26" Fill="{StaticResource FrogSecondaryColor}" Width="8" Height="3" />
    </Canvas>
</local:BaseSprite>